<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.schooldev.group8.travelbuddy.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ProfileWelcome">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/prof_pic"
                android:id="@+id/profilePic"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Welcome back User1 :)"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_height="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:id="@+id/activeTrips">


            <TextView
                android:layout_width="match_parent"
                android:text="Trips:"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/toolbar2">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="\nItally with family!"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="June 17th\n Mom, Dad, Brother\n 3 itinerary items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:paddingLeft="10dp"/>


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_keyboard_arrow_right_white_18dp"
                        android:id="@+id/backImageButton"
                        android:backgroundTint="@android:color/transparent"
                        android:layout_gravity="right"
                        android:paddingLeft="60dp"/>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>


            <TextView
                android:layout_width="match_parent"
                android:text="..."
                android:layout_weight="1"
                android:layout_height="0dp"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/navButtons">

            <Button
                android:text="Create new Trip"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/createTrip"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/white"/>

            <Button
                android:text="Sign out"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/signOut"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/white"/>

            <Button
                android:text="Secret Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/secretBtn"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/white"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

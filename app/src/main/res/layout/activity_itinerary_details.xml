<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_itinerary_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.schooldev.group8.travelbuddy.itinerary_details"
    android:weightSum="1">

    <TextView
        android:text="Add New Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activityTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_weight="0.06"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06" >

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:backgroundTint="@android:color/holo_green_light"
            android:orientation="horizontal"
            android:id="@+id/locationSearch"
            android:queryHint="Search Location">

        </SearchView>

        <Button
            android:text="populate with GMaps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/launchMapsBtn" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Location:"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"
            android:id="@+id/locationNameData"
            android:hint="name.."
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Address:"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView5"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"
            android:id="@+id/addressData"
            android:hint="type address here"
            android:layout_weight="1"
            />

    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="20dp"/>

    <TextView
        android:text="Hours of Operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hoursOfOp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06">

        <TextView
            android:text="Start:"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/startHoursOfOp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:text="N/A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/startHours"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06">

        <TextView
            android:text="End:"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/endHoursOfOp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:text="N/A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/endHours"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="20dp"/>

    <TextView
        android:text="Your Trip Times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yourTripText"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06">

        <TextView
            android:text="Arrival:"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/arrivalText"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"
            android:id="@+id/arrivalTimeData"
            android:hint="Set Arrival Time"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06">

        <TextView
            android:text="Duration:"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/durationText"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"
            android:id="@+id/durationTimeData"
            android:hint="Set Duration"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:text="DONE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/returnResultData"
        android:layout_weight="0.06"/>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_itinerary_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.schooldev.group8.travelbuddy.itinerary_details"
    android:weightSum="1">

    <TextView
        android:text="Adding New Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activityTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_weight="0.06"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Location Name:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"
            android:id="@+id/locationNameData"
            android:hint="name.."
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Address:"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView5"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            />

        <EditText
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"
            android:id="@+id/addressData"
            android:hint="type address here"
            />

        <Button
            android:text="Maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/launchMapsBtn"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:text="DONE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/returnResultData"
        android:layout_weight="0.06"/>


</LinearLayout>

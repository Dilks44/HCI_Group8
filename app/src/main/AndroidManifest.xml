<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.schooldev.group8.travelbuddy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateTrip" />
        <activity android:name=".MapScreen" />
        <activity android:name=".SelectMeetupPointActivity" />
        <activity android:name=".itinerary_details" />
        <activity android:name=".MembersActivity" />
        <activity android:name=".AddMembersActivity"></activity>
    </application>

</manifest>